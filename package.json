{
  "name": "hapi-ending",
  "version": "1.0.0",
  "description": "Creates documentation of the endpoints of an application",
  "keywords": [
    "hapi",
    "endpoints",
    "api",
    "rest",
    "documentation",
    "docs",
    "slate",
    "swagger"
  ],
  "main": "plugin.js",
  "scripts": {
    "test": "PORT=8145 mocha {lib,test}/**/*.spec.js",
    "lint": "standard",
    "dev": "npm-run-all --parallel watch:plugin watch:ui",
    "watch:ui": "parcel ./ui/index.html",
    "watch:plugin": "nodemon test/demo.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/desirable-objects/hapi-ending"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "browserslist": [
    "since 2017-06"
  ],
  "babel": {
    "plugins": [
      [
        "prismjs",
        {
          "languages": [
            "javascript",
            "bash"
          ],
          "plugins": [
            "line-numbers"
          ],
          "theme": "twilight",
          "css": true
        }
      ]
    ]
  },
  "dependencies": {
    "code": "^5.2.0",
    "coveralls": "^3.0.2",
    "dot-object": "^1.4.1",
    "hapi": "^17.6.0",
    "hoek": "^5.0.4",
    "inert": "^5.1.0",
    "joi": "^13.7.0",
    "lodash": "^4.17.11",
    "reorient": "^2.1.0",
    "sf": "0.1.8",
    "shortid": "2.2.4",
    "svelte-transitions": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "babel-plugin-prismjs": "^1.0.2",
    "cheerio": "^0.22.0",
    "jshint": "^2.9.6",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.11.0",
    "parcel-plugin-svelte": "^2.0.0",
    "prismjs": "^1.15.0",
    "standard": "^12.0.1",
    "svelte": "^2.13.5"
  },
  "standard": {
    "ignore": [
      "lib/public/**"
    ],
    "globals": [
      "it",
      "context",
      "describe",
      "before",
      "beforeEach"
    ]
  }
}
